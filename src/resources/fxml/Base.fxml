<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="__rootPane" xmlns:fx="http://javafx.com/fxml">
	<ImageView fitWidth="${__rootPane.width}" fitHeight="${__rootPane.height}">
		<Image url="image/background.jpg"/>
	</ImageView>

	<AnchorPane>
		<StackPane fx:id="mainPane" AnchorPane.topAnchor="64" AnchorPane.bottomAnchor="0"
		           AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
	</AnchorPane>

	<BorderPane>
		<top>
			<JFXToolbar fx:id="toolbar">
				<leftItems>
					<JFXRippler maskType="CIRCLE" style="-fx-ripple-color: WHITE">

					</JFXRippler>
				</leftItems>

				<rightItems>
					<JFXRippler maskType="CIRCLE" style="-fx-ripple-fill: WHITE">
						<JFXButton fx:id="closeButton"/>
					</JFXRippler>
				</rightItems>
			</JFXToolbar>
		</top>
	</BorderPane>

	<JFXDialog fx:id="closeDialog">
		<JFXDialogLayout>
			<heading>
				<Label>Confirm quit</Label>
			</heading>
			<body>
				<Label>Are you sure you want to quit?</Label>
			</body>
			<actions>
				<JFXButton fx:id="dialogDeclineButton" styleClass="dialog-trigger">NO</JFXButton>
				<JFXButton fx:id="dialogAcceptButton" styleClass="dialog-accept">YES</JFXButton>
			</actions>
		</JFXDialogLayout>
	</JFXDialog>
</StackPane>
